<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2787BA</item>
        <item name="colorPrimaryDark">#1C88BE</item>
        <item name="colorAccent">#FFCA08</item>
    </style>
    <style name="PlainText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">MankSans-Oblique</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">#010101</item>
    </style>

    <style name="Heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">MankSans-Medium</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2787BA</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
    </style>
</resources>
